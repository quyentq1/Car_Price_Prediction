<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="httpplatformhandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified" requireAccess="Script" />
    </handlers>

    <httpPlatform 
      processPath="C:\Users\Administrator\AppData\Local\Programs\Python\Python39\python.exe" 
      arguments="api.py" 
      stdoutLogEnabled="true" 
      stdoutLogFile=".\logs\httpplatform.log" 
      startupTimeLimit="60" 
      requestTimeout="00:10:00" 
      workingDirectory="%SystemDrive%\inetpub\wwwroot\CarPricePrediction\build" 
    />

    <rewrite>
      <rules>
        <rule name="FlaskProxy" stopProcessing="true">
          <match url="(.*)" />
          <action type="Rewrite" url="http://localhost:5050/{R:1}" appendQueryString="true" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
